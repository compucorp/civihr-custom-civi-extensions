<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/HRJob</base>
  <class>HRJob</class>
  <name>civicrm_hrjob</name>
  <comment>Job positions.</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <title>Job Id</title>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique HRJob ID</comment>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>contact_id</name>
    <type>int unsigned</type>
    <comment>FK to Contact ID</comment>
    <import>true</import>
    <title>Contact ID</title>
    <uniqueName>hrjob_contact_id</uniqueName>
  </field>
  <foreignKey>
    <name>contact_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>position</name>
    <type>varchar</type>
    <length>127</length>
    <comment>Internal name for the job (for HR)</comment>
    <title>Job Position</title>
    <export>true</export>
    <import>true</import>
    <uniqueName>hrjob_position</uniqueName>
  </field>
  <index>
    <name>index_position</name>
    <fieldName>position</fieldName>
  </index>

  <field>
    <name>title</name>
    <type>varchar</type>
    <length>127</length>
    <comment>Negotiated name for the job</comment>
    <title>Job Title</title>
    <export>true</export>
    <import>true</import>
    <uniqueName>hrjob_title</uniqueName>
  </field>
  <index>
    <name>index_title</name>
    <fieldName>title</fieldName>
  </index>

  <field>
    <name>funding_notes</name>
    <title>Funding Notes</title>
    <type>text</type>
    <export>true</export>
    <import>true</import>
  </field>

  <field>
    <name>contract_type</name>
    <title>Contract Type</title>
    <type>varchar</type>
    <length>63</length>
    <comment>Contract for employment, internship, etc.</comment>
    <pseudoconstant>
      <optionGroupName>hrjob_contract_type</optionGroupName>
    </pseudoconstant>
    <export>true</export>
    <import>true</import>
    <uniqueName>hrjob_contract_type</uniqueName>
  </field>
  <index>
    <name>index_contract_type</name>
    <fieldName>contract_type</fieldName>
  </index>

  <field>
    <name>period_type</name>
    <title>Contract Duration</title>
    <type>varchar</type>
    <length>63</length>
    <comment>.</comment>
    <pseudoconstant>
      <callback>CRM_HRJob_SelectValues::periodType</callback>
    </pseudoconstant>
    <export>true</export>
    <import>true</import>
    <uniqueName>hrjob_period_type</uniqueName>
  </field>
  <index>
    <name>index_period_type</name>
    <fieldName>period_type</fieldName>
  </index>

  <field>
    <name>period_start_date</name>
    <title>Contract Start Date</title>
    <type>date</type>
    <comment>First day of the job</comment>
    <export>true</export>
    <import>true</import>
    <uniqueName>hrjob_period_start_date</uniqueName>
  </field>

  <field>
    <name>period_end_date</name>
    <title>Contract End Date</title>
    <type>date</type>
    <comment>Last day of the job</comment>
    <export>true</export>
    <import>true</import>
    <uniqueName>hrjob_period_end_date</uniqueName>
  </field>

  <field>
    <name>notice_amount</name>
    <title>Notice Period from Employer (Amount)</title>
    <type>float</type>
    <default>0</default>
    <export>true</export>
    <import>true</import>
    <comment>Amount of time allocated for notice period from employer. Number part without the unit e.g 3 in 3 Weeks.</comment>
    <uniqueName>hrjob_notice_amount</uniqueName>
  </field>

   <field>
     <name>notice_unit</name>
     <title>Notice Period from Employer (Unit)</title>
     <type>varchar</type>
     <length>63</length>
     <comment>Unit of a notice period from employer assigned to a quantity e.g Week in 3 Weeks.</comment>
     <pseudoconstant>
       <callback>CRM_HRJob_SelectValues::commonUnit</callback>
     </pseudoconstant>
     <export>true</export>
     <import>true</import>
     <uniqueName>hrjob_notice_unit</uniqueName>
   </field>

   <field>
     <name>notice_amount_employee</name>
     <title>Notice Period from Employee (Amount)</title>
     <type>float</type>
     <default>0</default>
     <import>true</import>
     <comment>Amount of time allocated for notice period from employee. Number part without the unit e.g 3 in 3 Weeks.</comment>
     <uniqueName>hrjob_notice_amount_employee</uniqueName>
   </field>

   <field>
     <name>notice_unit_employee</name>
     <title>Notice Period from Employee (Unit)</title>
     <type>varchar</type>
     <length>63</length>
     <comment>Unit of a notice period from employee assigned to a quantity e.g Week in 3 Weeks.</comment>
     <pseudoconstant>
       <callback>CRM_HRJob_SelectValues::commonUnit</callback>
     </pseudoconstant>
     <export>true</export>
     <import>true</import>
     <uniqueName>hrjob_notice_unit_employee</uniqueName>
   </field>

  <field>
    <name>location</name>
    <title>Job Normal Place of Work</title>
    <type>varchar</type>
    <length>127</length>
    <comment>Normal place of work</comment>
    <export>true</export>
    <import>true</import>
    <pseudoconstant>
      <optionGroupName>hrjob_location</optionGroupName>
    </pseudoconstant>
    <uniqueName>hrjob_location</uniqueName>
  </field>
  <index>
    <name>index_location</name>
    <fieldName>location</fieldName>
  </index>

  <field>
    <name>is_primary</name>
    <type>boolean</type>
    <default>0</default>
    <comment>Is this the primary?</comment>
    <title>Job Is Primary</title>
    <export>true</export>
    <import>true</import>
    <uniqueName>hrjob_is_primary</uniqueName>
  </field>
  <index>
    <name>index_is_primary</name>
    <fieldName>is_primary</fieldName>
  </index>
</table>
